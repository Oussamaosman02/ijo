---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='made'>
  <Header tech={false} made='active' />
  <div class='container'>
    <h1>Webpages of our clients</h1>
    <h2>Comming soon...</h2>
  </div>
</Layout>
<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
  }
  .container h1,
  .container h2 {
    width: 90%;
    margin: 1vh auto;
    text-align: center;
  }
  @media (prefers-color-scheme: dark) {
    .container {
      background: #111;
      color: #f5f5f5;
    }
  }
</style>
